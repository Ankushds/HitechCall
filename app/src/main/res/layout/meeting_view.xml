<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    android:elevation="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/MeetSt"
            style="@style/accountnameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meeting Status : " />

        <TextView
            android:layout_toEndOf="@id/MeetSt"
            android:id="@+id/meetStatus"
            style="@style/locationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textMenu"
            android:layout_width="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/accountnameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Name : " />

        <TextView
            android:id="@+id/maccountName"
            style="@style/locationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/accountnameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Person : " />

        <TextView
            android:id="@+id/mcontactperson"
            style="@style/locationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/accountnameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : " />

        <TextView
            android:id="@+id/mlocation"
            style="@style/locationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/accountnameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date : " />

        <TextView
            android:id="@+id/mstartDate"
            style="@style/locationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/accountnameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date : " />

        <TextView
            android:id="@+id/mendDate"
            style="@style/locationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>